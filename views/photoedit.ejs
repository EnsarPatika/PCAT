<%- include('partials/_header'); %>
<body>
	<div class="tm-page-wrap mx-auto">
		<%- include('partials/_navigation'); %>

		<!-- Page content -->
		<div class="container-fluid">
			<div class="mx-auto tm-content-container">
				<main>
					<div class="row mb-5 pb-4">
						<div class="col-12">
							<img src="<%= photo[0].image %>" alt="Image" class="img-fluid tm-catalog-item-img">
						</div>
					</div>
					<div class="row mb-5 pb-5">
						<div class="col-xl-8 col-lg-7">
							<!-- Video description -->
							<div class="tm-video-description-box">
                                <form method="POST" action="/photopage/<%= photo[0]._id %>?_method=PUT">
                                    <div class="form-group">
                                        <input type="text" class="form-control rounded-0" name="title" value="<%= photo[0].title %>">
                                    </div>
                                    <!-- <h2 class="mb-5 tm-video-title"></h2> -->
                                    <!-- <p class="mb-4"><%= photo[0].description %></p>	 -->
                                    <div class="form-group mb-0">
                                        <textarea rows="8" class="form-control rounded-0" name="description"><%= photo[0].description %></textarea>
                                    </div>
                                    <div class="text-center">
                                        <button class="btn btn-primary p-0 mb-4 tm-btn-animate tm-btn-download tm-icon-download" type="submit" ><span>Update Details</span></button>	
                                    </div>	
                                </form>
                                
							</div>							
						</div>
					</div>
				</main>

				<!-- Subscribe form and footer links -->
                <%- include('partials/_footer'); %>
			</div> <!-- .tm-content-container -->
		</div>
	</div>

	<script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script>
    	$(document).ready(function() {
    		$('.tm-likes-box').click(function(e) {
    			e.preventDefault();
    			$(this).toggleClass('tm-liked');

    			if($(this).hasClass('tm-liked')) {
    				$('#tm-likes-count').html('486 likes');
    			} else {
    				$('#tm-likes-count').html('485 likes');
    			}
    		});
    	});
    </script>
</body>
</html>